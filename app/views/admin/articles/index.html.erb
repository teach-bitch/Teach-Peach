<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>For adult</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.reverse.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.for_adult %></td>
        <td><%= link_to 'Show', admin_article_path(article.id) %></td>
        <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>

        <td><%= link_to 'Destroy', admin_article_path(article.id), method: :delete, data: { confirm: 'Êtes-vous sûr?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
