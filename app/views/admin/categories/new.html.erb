<%= render 'errors', category: @category %>

<h1>New Category</h1>

<%= form_with scope: :category, url:  admin_categories_path(@category), method: :post, local:true do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', admin_categories_path %>
