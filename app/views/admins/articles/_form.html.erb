<%= form_with model: @article, local: true, multipart: true do |form| %>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :title, 'titre' %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content, 'contenu' %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :for_adult, 'Pour adulte' %>
    <%= form.check_box :for_adult %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
