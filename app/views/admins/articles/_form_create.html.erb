<%= form_for [:admins,Article.new], method: 'post', multipart: true, class: "form-group" do |form| %>
  <%= form.label :images, 'Images',class: 'control-label' %>
  <%= form.file_field :images, multiple: true, class: 'form-control' %>

  <%= form.label :title, 'Titre', class: 'mt-2' %>
  <%= form.text_field :title, placeholder: "Titre", class: 'form-control' %>

  <%= form.label :content, 'Contenu', class: 'control-label mt-2' %>
  <trix-editor input="post_content"></trix-editor>
  <%= form.text_area :content, id: :post_content, size: "150x10", class: 'form-control' %>

  <div class="field">
    <%= form.label :category, "Catégorie" %>
    <%= render 'category_dropdown' %>
  </div> 

  <%= form.check_box :for_adult, class: 'checkbox mt-2' %>
  <%= form.label :for_adult, 'Pour adulte'%>
  <br/>
  <%= button_tag(type: 'submit', class: "btn btn-primary btn-round btn-sm col-sm-3 mt-3 ") do %>
    Créer un article
  <% end %>
<% end %>
