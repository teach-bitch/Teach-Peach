<%= form_with(model: [:admins, typeform], local: true) do |form| %>

  <div class="field">
    <%= form.label :title, "Titre"%>
    <%= form.text_field :title, autofocus: true, placeholder: "Titre", class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :description, "Description" %>
    <%= form.text_field :description, placeholder: "Description", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :id_typeform, "Id Formulaire" %>
    <%= form.text_field :id_typeform, placeholder: "Id Formulaire", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :id_results, "Id Résultats" %>
    <%= form.text_field :id_results, placeholder: "Id Résultats", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.check_box :for_adult, class: 'checkbox mt-2' %>
    <%= form.label :for_adult, 'Pour adulte'%>
  </div>

  <%= form.submit class: "btn btn-primary btn-round btn-sm mt-3"%>
<% end %>
