<h1>Utilisateurs</h1>

<%= link_to 'Gérer les articles', admins_articles_path %>|<%= link_to 'Gérer les catégories', admins_categories_path %>|<%= link_to 'Gérer les typeforms', admins_typeforms_path %>

<table>
  <br/>
  <%= link_to 'Créer un utilisateur', new_admins_user_path %>
  <thead>
    <tr>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Pseudo</th>
      <th>Email</th>
      <th>Rôle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.reverse.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>

        <td><%= link_to 'Voir le profil', admins_user_path(user) %></td>
        <td><%= link_to 'Éditer', edit_admins_user_path(user) %></td>

        <td><%= link_to 'Supprimer', admins_user_path(user.id), method: :delete, data: { confirm: 'Êtes-vous sûr?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
