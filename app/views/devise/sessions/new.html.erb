<div class="container">
  <h2>Se connecter</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-group"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= f.label :email, "Email", class: 'control-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password, "Mot de passe", class: 'control-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mot de passe", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de moi" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Je me connecte" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
