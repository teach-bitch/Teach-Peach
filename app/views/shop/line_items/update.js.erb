<% if @line_item.quantity == 0 %>
  $('#item_fulldiv_<%= @line_item.id %>').fadeOut('2000')
<% else %>
  $('#item_quantity_<%= @line_item.id%>').html("<%= @line_item.quantity %>")
  $('#item_total_<%= @line_item.id %>').html("<%= @line_item_total.round(2) %><small>€</small>")
<% end %>
  $('#total_price').html("<%= @price %><small>€</small>")
<% if @price == 0 %>
  $('#checkout-btn').fadeOut('2000')
<% end %>
<% if @total_items_number > 0 %>
  $('#basketcount').html('<%= @total_items_number %>')
<% end %>
<% if @total_items_number == 0 %>
  $('#basketcount').fadeOut('2000')
<% end %>
