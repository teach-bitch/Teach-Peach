<div class="tab-pane active show" id="link-all">
  <!-- Product Card -->
  <div class="col-md-12">
    <div class="row">
      <% @products.each do |product|%>
        <div class="col-lg-4 col-md-6">
          <div class="card card-product box-shadow">
            <div class="card-image box-shadow ">
              <% if product.images != nil %>
                <%= link_to shop_product_path(product) do %>
                  <%= image_tag url_for(product.images[0]), alt: 'image', class: 'd-block align-self-center box-shadow' %>
                <% end %>
              <% end %>
            </div>
            <div class="card-body">
              <h6 class="category">
                <%= product.brand %>
              </h6>
              <h5 class="card-title">
                <div class="card-link ">
                  <%= product.name %>
                </div>
              </h5>
              <div class="card-footer ">
                <div class="price-container">
                  <span class="price ">
                    <%= number_to_currency(product.price, unit: "") %> â‚¬</span>
                </div>
                <div class="row pull-right">
                  <span>
                    <%= button_to 'Voir le produit', shop_product_path(product), class: 'btn btn-neutral', method: :get %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end%>
    </div>
  </div>
</div>
