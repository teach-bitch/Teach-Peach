<main>
  <div class="wrapper">
    <div class="section">
      <div class="container">
        <%= link_to admins_path do %>
          <i class='now-ui-icons arrows-1_minimal-left'>Retour vers l'index</i>
        <% end %>
        <div class="row">
          <div class="d-flex align-content-stretch flex-wrap">
            <div class="col-md-6 d-flex align-content-center flex-wrap">
              <% if @product.images.attached? %>
                <% @product.images.each do |image| %>
                  <%= image_tag image, alt: 'image', class: 'd-block img-raised align-self-center' %>
                <% end %>
              <% end %>
            </div>
            <div class="col-md-5 ml-auto mr-auto">
              <h2 class="title"><%= @product.name %></h2>
              <h5 class="category"><%= @product.brand %> </h5>
              <h2 class="main-price"><%= number_to_currency(@product.price, unit: "") %><small>â‚¬</small></h2>
              <% if @product.quantity.to_i > 0 %>
                <div class="card-collapse justify-content-start">
                  <span><%= link_to 'Ajouter au panier', admins_path, class: 'btn btn-dribbble btn-round' %></span>
                </div><br/>
              <% else %>
              <h6>Out of stock</h6>
              <%end%>
              <div class="card-collapse">
                <div class="card card-plain">
                  <div class="card-header">
                    Description
                  </div>
                  <div class="card-body">
                    <p><%= @product.description %></p>
                  </div>
                  <div class="card-header">
                    Reference : <%= @product.reference %>
                  </div>
                  <div class="card-header">
                    Categories :
                    <% @product.product_categories.each do |cat| %>
                      <span class="badge badge-neutral"><%= cat.title %></span>
                    <%end%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
