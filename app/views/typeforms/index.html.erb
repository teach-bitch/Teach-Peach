<p id="notice"><%= notice %></p>

<h1>Typeforms</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Id typeform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @typeforms.each do |typeform| %>
      <tr>
        <td><%= typeform.title %></td>
        <td><%= typeform.description %></td>
        <td><%= typeform.id_typeform %></td>
        <td><%= link_to 'Show', typeform %></td>
        <td><%= link_to 'Edit', edit_typeform_path(typeform) %></td>
        <td><%= link_to 'Destroy', typeform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

